x=8
dim y,z
y=0

funcion errado
x=x+1
print &"errou " &x &" vezes essa pergunta" &\n
fend

funcion certo
x=x+1
print &"acertou na " &x &" tentativa" &\n
fend

while y==0
print &"quando foi a primeira copa do mundo no Brasil?" &\n
scan z
if z==1950.0 then

begin certo

y = y + 1
else
begin errado

end if

wend

